; Disable splash screen
(setq inhibit-splash-screen -1)

; Disable backups
(setq backup-inhibited -1)

; Disable auto save
(setq auto-save-default nil)

; Show line numbers
(global-linum-mode -1)

; Disable emacs bell
(setq ring-bell-function 'ignore)

; Use spaces instead of tabs
(setq-default indent-tabs-mode nil)
